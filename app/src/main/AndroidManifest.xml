<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Bluetooth (modern + legacy) -->
    <!-- Android 12+ runtime permissions -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" tools:targetApi="s" />

    <!-- Pre-Android 12 permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".OracleBoxApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OracleBox"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Connection / Landing Page -->
        <activity
            android:name=".ui.connection.ConnectionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            android:theme="@style/Theme.OracleBox.NoActionBar"
            tools:targetApi="24">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mode Selection -->
        <activity
            android:name=".ui.mode.ModeSelectionActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.OracleBox.NoActionBar" />

        <!-- Spirit Box / Main Controls -->
        <activity
            android:name=".ui.control.ControlActivity"
            android:exported="false"
            android:label="Spirit Box"
            android:theme="@style/Theme.OracleBox.NoActionBar" />

        <!-- REM Pod -->
        <activity
            android:name=".ui.rempod.RemPodActivity"
            android:exported="false"
            android:label="REM Pod"
            android:theme="@style/Theme.OracleBox.NoActionBar" />

        <!-- Music Box -->
        <activity
            android:name=".ui.musicbox.MusicBoxActivity"
            android:exported="false"
            android:label="Music Box"
            android:theme="@style/Theme.OracleBox.NoActionBar" />

        <!-- Device Settings -->
        <activity
            android:name=".ui.settings.DeviceSettingsActivity"
            android:exported="false"
            android:label="Device Settings"
            android:theme="@style/Theme.OracleBox.NoActionBar" />
    </application>

</manifest>