<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP for any host (Pi IP is configurable at runtime). -->
    <base-config cleartextTrafficPermitted="true" />

    <!-- Still keep an explicit domain entry for the current default IP. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.1.74</domain>
    </domain-config>
</network-security-config>
