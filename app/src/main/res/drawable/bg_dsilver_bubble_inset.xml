<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Darker inset silver gradient - reversed for inset effect -->
    <gradient
        android:startColor="#3A3A3A"
        android:centerColor="#4A4A4A"
        android:endColor="#5A5A5A"
        android:angle="90" />

    <corners android:radius="12dp" />

    <stroke
        android:width="1dp"
        android:color="#2A2A2A" />

    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
