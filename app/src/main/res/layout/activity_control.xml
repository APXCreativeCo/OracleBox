<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_control_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_bg"
    android:backgroundTint="#784A38"
    android:backgroundTintMode="multiply"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <!-- Header with integrated back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bakelite_button"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_title_control_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SPIRIT BOX"
            android:textColor="@color/gothic_gold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_back_to_modes_sb"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀ BACK"
            android:textSize="10sp"
            android:backgroundTint="@null"
            android:minHeight="0dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Content scrolls below -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:foreground="@mipmap/sqlogo_foreground"
                android:scaleX="2"
                android:scaleY="2" />

            <TextView
                android:id="@+id/text_title_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="OracleBox"
                android:textColor="#D7B972"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_disconnected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="Disconnected from OracleBox"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone" />

            <!-- STATUS SECTION -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Status"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <!-- Status cards row -->

            <LinearLayout
                android:id="@+id/layout_status_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!-- Running card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUN"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_running"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dsilver_bubble_inset"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="⏵"
                        android:textColor="@color/ghost_on_background"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Direction card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWEEP DIR"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dsilver_bubble_inset"
                        android:text="⏵⏵"
                        android:textColor="@color/ghost_on_background"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Speed card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEED"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dsilver_bubble_inset"
                        android:text="000"
                        android:textColor="@color/ghost_on_background"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Sweep LED mode card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWEEP LEDs"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_sweep_led"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dsilver_bubble_inset"
                        android:text="Mode"
                        android:textColor="@color/ghost_on_background" />
                </LinearLayout>

                <!-- Box LED mode card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOX LEDs"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_box_led"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dsilver_bubble_inset"
                        android:text="Mode"
                        android:textColor="@color/ghost_on_background" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_refresh_status"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="161dp"
                    android:layout_height="32dp"
                    android:backgroundTint="@null"
                    android:text="REFRESH STATUS"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- START SPIRIT BOX BUTTON -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <Button
                android:id="@+id/button_start_spirit_box"
                style="@style/OracleBox.BakeliteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="▶ START SPIRIT BOX"
                android:textSize="18sp"
                android:backgroundTint="@color/gothic_gold"
                android:padding="16dp" />

            <!-- SWEEP CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Sweep Controls"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout_sweep_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button_start"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="START"
                        android:backgroundTint="@null" />

                    <Button
                        android:id="@+id/button_mute"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@null"
                        android:text="MUTE" />

                    <Button
                        android:id="@+id/button_stop"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOP"
                        android:backgroundTint="@null" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_direction_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_dir_up"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:text="SWEEP UP" />

                <Button
                    android:id="@+id/button_dir_down"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:text="SWEEP DOWN" />

            </LinearLayout>

            <!-- SPEED CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Sweep Speed (ms)"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_faster"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FASTER"
                    android:backgroundTint="@null" />

                <Button
                    android:id="@+id/button_slower"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SLOWER"
                    android:backgroundTint="@null" />
            </LinearLayout>

            <!-- ESTES METHOD -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Estes Method (Private Audio)"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_bt_audio_status_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Output: Pi Speaker"
                android:textColor="@color/gothic_gold"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_refresh_bt_devices_sb"
                style="@style/OracleBox.BakeliteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCAN FOR NEARBY HEADPHONES"
                android:backgroundTint="@color/gothic_gold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Headphones (tap to pair/connect):"
                android:textColor="@color/ghost_on_surface"
                android:paddingTop="8dp"
                android:id="@+id/label_bt_devices_sb"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_bt_device_list_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ic_launcher_background"
                android:paddingTop="4dp"
                android:background="@drawable/bg_log_window"
                android:padding="8dp"
                android:minHeight="60dp"
                android:visibility="gone"
                android:text="Scanning..."/>

            <Button
                android:id="@+id/button_disconnect_bt_sb"
                style="@style/OracleBox.BakeliteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SWITCH TO PI SPEAKER"
                android:backgroundTint="@null"
                android:layout_marginTop="6dp"/>

            <!-- LED CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Dial LED Mode"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_sweep_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <!-- Sweep LED config: min/max brightness and animation speed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dial LED Brightness / Speed"
                android:textColor="@color/ghost_on_surface"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seek_sweep_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_sweep_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_sweep_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_apply_sweep_cfg"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:text="APPLY DIAL LED CFG"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Box LED Mode"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_box_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <!-- Box LED config: min/max brightness and animation speed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Box LED Brightness / Speed"
                android:textColor="@color/ghost_on_surface"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seek_box_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_box_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_box_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_apply_box_cfg"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:text="APPLY BOX LED CFG"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- AUDIO FX & MIXER -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <!-- FX Enabled Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_gothic_bubble"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Audio FX &amp; Mixer"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/switch_fx_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <!-- Current Preset Display -->

            <!-- Mode Selector Buttons -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_mode_fm"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@null"
                    android:text="FM Mode"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/button_mode_sb7"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@null"
                    android:text="SB7 Mode"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Save Custom Preset Button -->

            <!-- FX Sliders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_dsilver_bubble"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Preset:"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_current_preset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dsilver_bubble_inset"
                    android:text="SB7_CLASSIC"
                    android:textColor="@color/ghost_on_background"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <Button
                android:id="@+id/button_save_preset"
                style="@style/OracleBox.BakeliteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@null"
                android:text="Save Custom Preset..."
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bandpass Low (Hz)"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_bp_low_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 Hz"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_bp_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="800"
                android:progress="300" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filters out low rumble and bass. Higher = crisper but thinner sound."
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bandpass High (Hz)"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_bp_high_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2600 Hz"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_bp_high"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2000"
                android:progress="600" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filters out high hiss and noise. Lower = warmer, less harsh sound."
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contrast"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_contrast_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_contrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="25" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sharpens audio by enhancing volume differences. Higher = more dramatic."
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reverb Level"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_reverb_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_reverb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="35" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adds echo/room ambience. Higher = more spacious, ghostly atmosphere."
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Output Gain (dB)"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_gain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_gain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="24"
                android:progress="12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final output volume boost/cut. Positive = louder, negative = quieter."
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <!-- Mixer Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Mixer Controls"
                android:textColor="@color/ghost_on_surface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speaker Volume"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_speaker_volume_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_speaker_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="37"
                android:progress="14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mic Capture Volume"
                    android:textColor="@color/ghost_on_surface"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_mic_volume_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/gothic_gold"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/slider_mic_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="35"
                android:progress="20" />

            <!-- LOG VIEW -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Log"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scroll_logs"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                android:fillViewport="false">

                <TextView
                    android:id="@+id/text_logs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_log_window"
                    android:padding="4dp"
                    android:textColor="@color/ghost_background"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:focusable="false" />
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
