<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_control_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_bg"
    android:backgroundTint="#784A38"
    android:backgroundTintMode="multiply"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <!-- Top wood/brass title plaque -->

    <TextView
        android:id="@+id/text_title_control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bakelite_button"
        android:text="OracleBox Controls"
        android:textColor="@color/gothic_gold"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <Button
            android:id="@+id/button_device_settings"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICE SETTINGS"
            android:textSize="10sp"
            android:backgroundTint="@null" />
    </LinearLayout>

    <!-- Content scrolls below -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:foreground="@mipmap/sqlogo_foreground"
                android:scaleX="2"
                android:scaleY="2" />

            <TextView
                android:id="@+id/text_title_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="OracleBox"
                android:textColor="#D7B972"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_disconnected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="Disconnected from OracleBox"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone" />

            <!-- STATUS SECTION -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Status"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <!-- Status cards row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!-- Running card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUN"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_running"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="⏵"
                        android:textColor="@color/ic_launcher_background"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Direction card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWEEP DIR"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏵⏵"
                        android:textColor="@color/ic_launcher_background"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Speed card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEED"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@color/ic_launcher_background"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Sweep LED mode card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWEEP LEDs"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_sweep_led"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>

                <!-- Box LED mode card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOX LEDs"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_box_led"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_refresh_status"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="161dp"
                    android:layout_height="32dp"
                    android:backgroundTint="@null"
                    android:text="REFRESH STATUS"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- SWEEP CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Sweep Controls"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/button_start"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="START"
                        android:backgroundTint="@null" />

                    <Button
                        android:id="@+id/button_mute"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@null"
                        android:text="MUTE" />

                    <Button
                        android:id="@+id/button_stop"
                        style="@style/OracleBox.BakeliteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOP"
                        android:backgroundTint="@null" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_dir_up"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:text="SWEEP UP" />

                <Button
                    android:id="@+id/button_dir_down"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:text="SWEEP DOWN" />

            </LinearLayout>

            <!-- SPEED CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Sweep Speed (ms)"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_faster"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FASTER"
                    android:backgroundTint="@null" />

                <Button
                    android:id="@+id/button_slower"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SLOWER"
                    android:backgroundTint="@null" />
            </LinearLayout>

            <!-- LED CONTROLS -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Dial LED Mode"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_sweep_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <!-- Sweep LED config: min/max brightness and animation speed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dial LED Brightness / Speed"
                android:textColor="@color/ghost_on_surface"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seek_sweep_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_sweep_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_sweep_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_apply_sweep_cfg"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:text="APPLY DIAL LED CFG"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Box LED Mode"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_box_led"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log_window" />

            <!-- Box LED config: min/max brightness and animation speed -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Box LED Brightness / Speed"
                android:textColor="@color/ghost_on_surface"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seek_box_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_box_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255" />

                <SeekBar
                    android:id="@+id/seek_box_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_apply_box_cfg"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@null"
                    android:text="APPLY BOX LED CFG"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- SOUND CONTROLS HEADER -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Sound Control"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <!-- Sound status cards styled like Status row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!-- Startup sound card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STARTUP"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_startup_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>

                <!-- Rempod sound card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REMPOD"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_rempod_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming soon"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>

                <!-- Music box sound card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dsilver_bubble"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MUSIC BOX"
                        android:textAllCaps="true"
                        android:textColor="@color/ghost_surface"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_musicbox_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming soon"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_upload_sound"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UPLOAD SOUND"
                    android:backgroundTint="@null" />

                <Button
                    android:id="@+id/button_play_sound"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PLAY SELECTED"
                    android:backgroundTint="@null" />
            </LinearLayout>

            <!-- Upload progress -->
            <ProgressBar
                android:id="@+id/progress_upload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_sounds"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_log_window" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_refresh_sounds"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="161dp"
                    android:layout_height="32dp"
                    android:backgroundTint="@null"
                    android:text="REFRESH SOUND LIST"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_set_startup"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET AS STARTUP"
                    android:backgroundTint="@null" />

                <Button
                    android:id="@+id/button_set_rempod"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:text="SET AS REMPOD" />

                <Button
                    android:id="@+id/button_set_musicbox"
                    style="@style/OracleBox.BakeliteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET AS MUSICBOX"
                    android:backgroundTint="@null" />
            </LinearLayout>

            <!-- LOG VIEW -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_gothic_bubble"
                android:text="Log"
                android:textColor="@color/ghost_on_surface"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scroll_logs"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/text_logs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_log_window"
                    android:padding="4dp"
                    android:textColor="@color/ghost_background"
                    android:textSize="12sp" />
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
