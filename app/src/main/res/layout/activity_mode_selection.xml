<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_bg"
    android:backgroundTint="#784A38"
    android:backgroundTintMode="multiply"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <!-- Header with integrated back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bakelite_button"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODE SELECTION"
            android:textColor="@color/gothic_gold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_back_to_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bakelite_button"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="◀ BACK"
            android:textColor="@color/gothic_gold"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/image_logo_ms"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="OracleBox Logo"
        android:foreground="@mipmap/sqlogo_foreground"
        android:scaleX="2"
        android:scaleY="2" />

    <!-- OracleBox Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OracleBox"
        android:textAlignment="center"
        android:textColor="#D7B972"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <!-- Connection Status Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gothic_bubble"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connected to:"
            android:textColor="@color/ghost_on_surface"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_connected_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OracleBox"
            android:textColor="@color/gothic_gold"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Instruction Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Investigation Method"
        android:textAlignment="center"
        android:textColor="@color/ghost_on_surface"
        android:textSize="16sp"
        android:textStyle="italic"
        android:fontFamily="serif"
        android:layout_marginBottom="24dp" />

    <!-- Mode Cards Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Spirit Box Card -->
            <LinearLayout
                android:id="@+id/card_spirit_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_dsilver_bubble"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bakelite_button"
                    android:letterSpacing="0.05"
                    android:text="SPIRIT BOX"
                    android:textAlignment="center"
                    android:textColor="@color/gothic_gold"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Real-time radio frequency sweep\nfor spirit communication through EVP"
                    android:textAlignment="center"
                    android:textColor="@color/ghost_surface"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:alpha="0.7"
                    android:text="TAP TO ENTER ▶"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- REM Pod Card -->
            <LinearLayout
                android:id="@+id/card_rem_pod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dsilver_bubble"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bakelite_button"
                    android:letterSpacing="0.05"
                    android:text="REM POD"
                    android:textAlignment="center"
                    android:textColor="@color/gothic_gold"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Electromagnetic field detection\nwith proximity alerts and visual indicators"
                    android:textAlignment="center"
                    android:textColor="@color/ghost_surface"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="TAP TO ENTER ▶"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:alpha="0.7" />
            </LinearLayout>

            <!-- Music Box Card -->
            <LinearLayout
                android:id="@+id/card_music_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dsilver_bubble"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bakelite_button"
                    android:letterSpacing="0.05"
                    android:text="MUSIC BOX"
                    android:textAlignment="center"
                    android:textColor="@color/gothic_gold"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Motion-triggered music box sounds\nfor presence detection and interaction"
                    android:textAlignment="center"
                    android:textColor="@color/ghost_surface"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="TAP TO ENTER ▶"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:alpha="0.7" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_device_settings"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@null"
            android:text="DEVICE SETTINGS"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button_disconnect"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@null"
            android:text="DISCONNECT"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>
