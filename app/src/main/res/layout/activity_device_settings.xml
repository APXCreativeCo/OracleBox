<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/wood_bg"
    android:backgroundTint="#784A38"
    android:backgroundTintMode="multiply">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gothic_bubble"
            android:text="Device Settings"
            android:textColor="@color/ghost_on_surface"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Device"/>

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gothic_gold"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_device_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ghost_on_surface"/>

        <Space android:layout_width="match_parent" android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gothic_bubble"
            android:text="Pi Wiâ€‘Fi Base URL"
            android:textColor="@color/ghost_on_surface"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_pi_base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://192.168.x.x:5000"
            android:inputType="textUri"
            android:background="@drawable/bg_log_window"
            android:padding="8dp"/>

        <Button
            android:id="@+id/button_save_base_url"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:backgroundTint="@null"
            android:layout_marginTop="6dp"/>

        <Space android:layout_width="match_parent" android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gothic_bubble"
            android:text="Startup Sound"
            android:textColor="@color/ghost_on_surface"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_startup_sound_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/ic_launcher_background"
            android:paddingTop="4dp"/>

        <Button
            android:id="@+id/button_clear_startup"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR STARTUP SOUND"
            android:backgroundTint="@null"
            android:layout_marginTop="6dp"/>

        <Space android:layout_width="match_parent" android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gothic_bubble"
            android:text="Diagnostics"
            android:textColor="@color/ghost_on_surface"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_ping"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PING PI"
            android:backgroundTint="@null"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/text_ping_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ghost_on_surface"
            android:paddingTop="4dp"
            android:text=""/>

        <Space android:layout_width="match_parent" android:layout_height="22dp" />

    </LinearLayout>

</ScrollView>
