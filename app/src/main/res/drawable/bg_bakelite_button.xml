<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state - darker -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2A170C"
                android:centerColor="#1A0F08"
                android:endColor="#0A0604"
                android:angle="90" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="@color/gothic_gold_soft" />
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <!-- Focused state - slightly lighter -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#5A3A26"
                android:centerColor="#4A3020"
                android:endColor="#3A271C"
                android:angle="90" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="@color/gothic_gold" />
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A2A16"
                android:centerColor="#3A2010"
                android:endColor="#2A170C"
                android:angle="90" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="@color/gothic_gold_soft" />
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
