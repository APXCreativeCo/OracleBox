<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_bg"
    android:backgroundTint="#784A38"
    android:backgroundTintMode="multiply"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layout_connection_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:paddingTop="48dp"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/image_logo4"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:foreground="@mipmap/sqlogo_foreground"
            android:scaleX="2.5"
            android:scaleY="2.5" />

        <!-- App Title -->
        <TextView
            android:id="@+id/text_title_control3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="OracleBox"
            android:textColor="@color/gothic_gold"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="serif" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Paranormal Communication Device"
            android:textColor="@color/ghost_on_surface"
            android:textSize="14sp"
            android:textStyle="italic"
            android:fontFamily="serif" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Connection Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gothic_bubble"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONNECTION STATUS"
                android:textColor="@color/ghost_on_surface"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Not Connected"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_device_name_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gothic_gold"
                android:textSize="14sp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_connecting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Scan Button -->

        <!-- Paired Devices Section -->
        <Button
            android:id="@+id/button_scan"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@null"
            android:text="SCAN FOR DEVICES"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_devices_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_gothic_bubble"
            android:text="Paired Devices"
            android:textColor="@color/ghost_on_surface"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_devices"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_dsilver_bubble"
            android:dividerHeight="1dp"
            android:padding="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Continue Button (only visible when connected) -->
        <Button
            android:id="@+id/button_open_controls"
            style="@style/OracleBox.BakeliteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gothic_gold"
            android:text="â–¶ CONTINUE"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ensure your OracleBox is powered on\nand Bluetooth is enabled"
            android:textAlignment="center"
            android:textColor="@color/ghost_on_surface"
            android:textSize="12sp"
            android:alpha="0.7" />

    </LinearLayout>

</ScrollView>
